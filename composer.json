{
    "name": "tgw-sistemas/parvus-framework",
    "type": "project",
    "require": {
        "php" : ">=5.3",
        "philo/laravel-blade": "2.*",
        "illuminate/database": "*",
        "phpmailer/phpmailer": "*",
        "symfony/http-foundation" : "2.6.*",
        "filp/whoops": "^2.1",
        "symfony/routing" : "3.1.*"
    },
    "autoload": {
    	"files": [
            "src/helper/Lang.php",
            "src/helper/Debug.php",
            "src/helper/Text.php",
			"src/helper/Number.php"
        ],
        "psr-0": {
            "": "src/"
        },
        "psr-4": {
	        "Parvus\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "preferred-install": "dist"
    }
}
